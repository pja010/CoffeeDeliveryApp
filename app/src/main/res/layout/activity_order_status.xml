<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:gravity="center|top"
        tools:context=".OrderStatusActivity">
    <TextView
            android:text="ORDER SUMMARY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewOrderStatus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="141dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewOrderInformation"
            app:layout_constraintVertical_bias="0.838"/>
    <TextView
            android:text="Display customer info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textViewCustomerInfo"/>

    <TextView
            android:text="ToDo: display order status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewOrderInformation"
            tools:layout_editor_absoluteY="259dp"/>
      <TextView
            android:text="Delivery time: 20 min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textViewTime"
            app:layout_constraintTop_toBottomOf="@+id/textViewOrderInformation"
            android:layout_marginTop="144dp"/>

</LinearLayout>